
<h1>商品新規追加</h1>

<%= form_for @product do |f| %>
  <h4>シングルアルバム名</h4>
  <%= f.text_field :single_album_name %>

  <h4>ジャケット画像</h4>
  <%= f.attachment_field :jacket_image %><br>

  <h4>アーティスト名</h4>
  <%= f.collection_select :artist_id, Artist.all, :id, :artist_name, :prompt => true %>
  <%= link_to "アーティスト名追加", new_artist_path %>

  <h4>レーベル名</h4>
  <%= f.collection_select :label_id, Label.all, :id, :label_name, :prompt => true %>
  <%= link_to "レーベル名追加", new_label_path %>

  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, :prompt => true %>
  <%= link_to "ジャンル追加", new_genre_path %>

  <h4>在庫数</h4>
  <%= f.number_field :stock_quantity %><br>

  <label>
    <%= f.radio_button :sales_status, true %> 販売中
  </label>
  <label>
    <%= f.radio_button :sales_status, false %> 販売停止中
  </label><br>

  <h4>価格(税別価格)</h4>
  <%= f.number_field :price %> 円

  <h4>ディスク</h4>
  <%= f.fields_for :discs do |disc| %>
    <%= render 'disc_fields', f: disc %>
  <% end %>
  <div>
    <%= link_to_add_association 'ディスク追加',f, :discs %>
  </div>
  <br>
  <%= f.submit "追加" %>
<% end %>
<%= link_to '戻る', products_path %>






