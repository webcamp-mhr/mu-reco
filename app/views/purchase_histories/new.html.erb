
<!-- 購入確認ページ -->

<h1>購入確認画面</h1>

<table class="table">
  <thead>
    <tr>
      <th>ジャケ写</th>
      <th>シングルアルバム名</th>
      <th>アーティスト名</th>
      <th>枚数</th>
      <th>小計</th>
      <th>総計</th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <% if cart.check == true %>
        <tr>
          <td><%= attachment_image_tag cart.product, :jacket_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %></td>
          <td><%= cart.product.single_album_name %></td>
          <td><%= cart.product.artist.artist_name %></td>
          <td><%= cart.purchase_quantity %></td>
          <% sub_total = cart.product.price * cart.purchase_quantity %>
          <td><%= sub_total %></td>
          <% sum =+ sub_total %>
          <td><%= sum %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= form_for @purchase_history do |f| %>

  <div>
    <h4>お届け先の選択</h4>
    <label>
      <%= f.radio_button :delivery_status, '1' %> 受付中
    </label>
    <label>
      <%= f.radio_button :delivery_status, '2' %> 商品準備中
    </label>
    <label>
      <%= f.radio_button :delivery_status, '3' %> 出荷済み
    </label>
  </div>

  <div>
    <h4>支払い選択</h4>
    <label>
      <%= f.radio_button :payment_status, '1' %> 銀行振込
    </label>
    <label>
      <%= f.radio_button :payment_status, '2' %> クレジットカード
    </label>
    <label>
      <%= f.radio_button :payment_status, '3' %> 代引
    </label>
  </div>

  <%= f.submit '購入確定' %>

<% end %>

